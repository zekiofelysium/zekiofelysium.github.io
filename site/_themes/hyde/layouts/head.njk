<head>
  <meta charset="utf-8" />
  <title>{{ title + ' | ' if title }}{{ site.title }}</title>
  <meta
    name="description"
    content="{% if content %}{{ content | excerpt | safe }}{% else %}{{ site.tagline }}{% endif %}"
  />
  <meta
    name="viewport"
    content="width=device-width, initial-scale=1, shrink-to-fit=no"
  />
  <meta
    name="generator"
    content="{{ eleventy.generator }}"
    built="{{ build.time | dateISO }}"
  />

  <link href='https://fonts.googleapis.com/css2?family=Noto+Serif+TC:wght@200..900&amp;display=swap' rel='stylesheet'/>
  <link rel="shortcut icon" href="./images/profile-32x32.ico" sizes="32x32" />
  <link rel="apple-touch-icon" href="./images/apple-touch-icon.png" />

  {% if isProduction %}
  <style>
    {% include "../css/custom.min.css" %}
  </style>
  {% else %}
  <link rel="stylesheet" href="/css/custom.min.css" />
  {% endif %}
  <link
    rel="alternate"
    type="application/rss+xml"
    title="RSS"
    href="./feeds.xml"
  />
</head>
